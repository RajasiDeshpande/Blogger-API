<% layout("boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
    <h1>Edit Blog</h1>
    <form method="POST" action="/listing/<%=detail._id%>?_method=PUT">
        
        <div>
            <label for="title" class="form-label">Title</label>
            <input id="title" type="text" name="title" value="<%=detail.title%>" class="form-control">
        </div>
        <br><br>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea id="description" name="description" class="form-control"><%=detail.description%></textarea>
        </div>
        <br><br>
        <div>
            <label for="img" class="form-label">Image Link</label>
            <input type="text" name="image" value="<%=detail.image%>" class="form-control" id="img">
        </div>
        <br><br>
        <div class="row">
            <br><br>
            <div class="col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="country" type="text" value="<%=detail.country%>" class="form-control">
            </div>
        </div>
        
        <br><br>
        <div>
            <label for="form-label">Label</label>
            <input type="text" name="location" type="text" value="<%=detail.location%>" class="form-control">
        </div>
        <br><br>
        <button class="btn btn-dark">Edit</button>
        <br><br>
    </form>
    <div>
</div>